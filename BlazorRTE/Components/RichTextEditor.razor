@using BlazorRTE.HelperClasses
@using BlazorEmo.Components
@using BlazorEmo.Models

<div class="rich-text-editor @(IsFocused ? "focused" : "") @(DarkMode ? "dark-mode" : "")" style="@GetEditorStyle()">
    @if (ShowToolbar)
    {
        <div class="rte-toolbar"
             role="toolbar"
             aria-label="Rich text formatting"
             aria-controls="@_editorId"
             @onkeydown="OnToolbarKeyDown"
             @onmousedown="OnToolbarMouseDown"
             @onmousedown:preventDefault>

            @* ===== HISTORY GROUP ===== *@
            <div role="group" aria-label="History">
                <button type="button"
                        id="rte-btn-undo"
                        tabindex="@GetToolbarTabIndex("rte-btn-undo")"
                        class="rte-btn"
                        aria-label="Undo"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-undo"))"
                        @onclick="() => ExecuteCommand(FormatCommand.Undo)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Undo (Ctrl+Z)">
                    @((MarkupString)SvgIcons.Undo)
                    <span class="sr-only">Undo</span>
                </button>

                <button type="button"
                        id="rte-btn-redo"
                        tabindex="@GetToolbarTabIndex("rte-btn-redo")"
                        class="rte-btn"
                        aria-label="Redo"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-redo"))"
                        @onclick="() => ExecuteCommand(FormatCommand.Redo)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Redo (Ctrl+Y)">
                    @((MarkupString)SvgIcons.Redo)
                    <span class="sr-only">Redo</span>
                </button>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== TEXT STYLE GROUP ===== *@
            <div role="group" aria-label="Text style">
                @* Heading Level Picker *@
                <div class="rte-color-dropdown">
                    <button type="button"
                            id="rte-btn-heading"
                            tabindex="@GetToolbarTabIndex("rte-btn-heading")"
                            @ref="_headingButton"
                            class="rte-btn rte-btn-wide"
                            aria-label="Heading level"
                            aria-haspopup="true"
                            aria-expanded="@_showHeadingPicker.ToString().ToLower()"
                            @onfocus="@(() => OnToolbarButtonFocus("rte-btn-heading"))"
                            @onclick="ToggleHeadingPicker"
                            @onmousedown:preventDefault
                            @onclick:stopPropagation
                            data-tooltip="Heading Level">
                        @GetCurrentHeadingLabel()
                    </button>

                    @if (_showHeadingPicker)
                    {
                        <div @ref="_headingPalette"
                             id="heading-palette"
                             class="rte-color-palette"
                             role="listbox"
                             aria-label="Heading levels"
                             @onkeydown="@(e => OnDropdownKeyDown(e, "heading-palette"))"
                             @onkeydown:stopPropagation
                             @onkeydown:preventDefault
                             @onclick:stopPropagation
                             @onmousedown:stopPropagation>
                            <div class="rte-color-palette-title" id="heading-level-label">Heading Level</div>
                            <div class="rte-font-size-list" aria-labelledby="heading-level-label">

                                @* Normal option *@
                                <button type="button" class="rte-font-option" role="option"
                                        @onclick="@(() => SelectHeading("p"))">
                                    Normal (Ctrl+Alt+0)
                                </button>

                                @* Heading 1 option *@
                                <button type="button" class="rte-font-option" role="option"
                                        @onclick="@(() => SelectHeading("h1"))">
                                    Heading 1 (Ctrl+Alt+1)
                                </button>

                                @* Heading 2 option *@
                                <button type="button" class="rte-font-option" role="option"
                                        @onclick="@(() => SelectHeading("h2"))">
                                    Heading 2 (Ctrl+Alt+2)
                                </button>

                                @* Heading 3 option *@
                                <button type="button" class="rte-font-option" role="option"
                                        @onclick="@(() => SelectHeading("h3"))">
                                    Heading 3 (Ctrl+Alt+3)
                                </button>

                            </div>
                        </div>
                    }
                </div>

                @* Font Family Picker *@
                <div class="rte-color-dropdown">
                    <button type="button"
                            id="rte-btn-fontfamily"
                            tabindex="@GetToolbarTabIndex("rte-btn-fontfamily")"
                            @ref="_fontFamilyButton"
                            class="rte-btn"
                            aria-label="Font family"
                            aria-haspopup="true"
                            aria-expanded="@_showFontFamilyPicker.ToString().ToLower()"
                            @onfocus="@(() => OnToolbarButtonFocus("rte-btn-fontfamily"))"
                            @onclick="ToggleFontFamilyPicker"
                            @onmousedown:preventDefault
                            @onclick:stopPropagation
                            data-tooltip="Font Family">
                        Aa
                    </button>

                    @if (_showFontFamilyPicker)
                    {
                        <div @ref="_fontFamilyPalette"
                             id="fontfamily-palette"
                             class="rte-color-palette rte-font-family-palette"
                             role="listbox"
                             aria-label="Font families"
                             @onkeydown="@(e => OnDropdownKeyDown(e, "fontfamily-palette"))"
                             @onkeydown:stopPropagation
                             @onkeydown:preventDefault
                             @onclick:stopPropagation
                             @onmousedown:stopPropagation>
                            <div class="rte-color-palette-title" id="font-family-label">Font Family</div>
                            <div class="rte-font-family-list" aria-labelledby="font-family-label">
                                @foreach (var font in _fontFamilies)
                                {
                                    <button type="button"
                                            class="rte-font-option"
                                            role="option"
                                            aria-label="@font.Value"
                                            style="font-family: @font.Key;"
                                            @onclick="@(() => SelectFontFamily(font.Key))"
                                            data-tooltip="@font.Value">
                                        @font.Value
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>

                @* Font Size Picker *@
                <div class="rte-color-dropdown">
                    <button type="button"
                            id="rte-btn-fontsize"
                            tabindex="@GetToolbarTabIndex("rte-btn-fontsize")"
                            @ref="_fontSizeButton"
                            class="rte-btn"
                            aria-label="Font size"
                            aria-haspopup="true"
                            aria-expanded="@_showFontSizePicker.ToString().ToLower()"
                            @onfocus="@(() => OnToolbarButtonFocus("rte-btn-fontsize"))"
                            @onclick="ToggleFontSizePicker"
                            @onmousedown:preventDefault
                            @onclick:stopPropagation
                            data-tooltip="Font Size (Ctrl+Shift+> / Ctrl+Shift+<)">
                        @GetCurrentFontSizeLabel()
                    </button>

                    @if (_showFontSizePicker)
                    {
                        <div @ref="_fontSizePalette"
                             id="fontsize-palette"
                             class="rte-color-palette"
                             role="listbox"
                             aria-label="Font sizes"
                             @onkeydown="@(e => OnDropdownKeyDown(e, "fontsize-palette"))"
                             @onkeydown:stopPropagation
                             @onkeydown:preventDefault
                             @onclick:stopPropagation
                             @onmousedown:stopPropagation>
                            <div class="rte-color-palette-title" id="font-size-label">Font Size</div>
                            <div class="rte-font-size-list" aria-labelledby="font-size-label">
                                @foreach (var size in _fontSizes)
                                {
                                    <button type="button"
                                            class="rte-font-option"
                                            role="option"
                                            aria-label="@size.Value"
                                            @onclick="@(() => SelectFontSize(size.Key))"
                                            data-tooltip="@size.Value">
                                        @size.Value
                                    </button>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== TEXT FORMAT GROUP ===== *@
            <div role="group" aria-label="Text formatting">
                <button type="button"
                        id="rte-btn-bold"
                        tabindex="@GetToolbarTabIndex("rte-btn-bold")"
                        class="rte-btn @(IsFormatActiveOrPending("bold") ? "active" : "")"
                        aria-pressed="@IsFormatActiveOrPending("bold").ToString().ToLower()"
                        aria-label="Bold"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-bold"))"
                        @onclick="() => ExecuteCommandWithPendingFormat(FormatCommand.Bold)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Bold (Ctrl+B)">
                    @((MarkupString)SvgIcons.Bold)
                    <span class="sr-only">Bold</span>
                </button>

                <button type="button"
                        id="rte-btn-italic"
                        tabindex="@GetToolbarTabIndex("rte-btn-italic")"
                        class="rte-btn @(IsFormatActiveOrPending("italic") ? "active" : "")"
                        aria-pressed="@IsFormatActiveOrPending("italic").ToString().ToLower()"
                        aria-label="Italic"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-italic"))"
                        @onclick="() => ExecuteCommandWithPendingFormat(FormatCommand.Italic)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Italic (Ctrl+I)">
                    @((MarkupString)SvgIcons.Italic)
                    <span class="sr-only">Italic</span>
                </button>

                <button type="button"
                        id="rte-btn-underline"
                        tabindex="@GetToolbarTabIndex("rte-btn-underline")"
                        class="rte-btn @(IsFormatActiveOrPending("underline") ? "active" : "")"
                        aria-pressed="@IsFormatActiveOrPending("underline").ToString().ToLower()"
                        aria-label="Underline"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-underline"))"
                        @onclick="() => ExecuteCommandWithPendingFormat(FormatCommand.Underline)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Underline (Ctrl+U)">
                    @((MarkupString)SvgIcons.Underline)
                    <span class="sr-only">Underline</span>
                </button>

                <button type="button"
                        id="rte-btn-strikethrough"
                        tabindex="@GetToolbarTabIndex("rte-btn-strikethrough")"
                        class="rte-btn @(IsFormatActiveOrPending("strikeThrough") ? "active" : "")"
                        aria-pressed="@IsFormatActiveOrPending("strikeThrough").ToString().ToLower()"
                        aria-label="Strikethrough"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-strikethrough"))"
                        @onclick="() => ExecuteCommandWithPendingFormat(FormatCommand.Strikethrough)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Strikethrough (Ctrl+Shift+X)">
                    @((MarkupString)SvgIcons.Strikethrough)
                    <span class="sr-only">Strikethrough</span>
                </button>

                <button type="button"
                        id="rte-btn-subscript"
                        tabindex="@GetToolbarTabIndex("rte-btn-subscript")"
                        class="rte-btn @(IsFormatActiveOrPending("subscript") ? "active" : "")"
                        aria-pressed="@IsFormatActiveOrPending("subscript").ToString().ToLower()"
                        aria-label="Subscript"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-subscript"))"
                        @onclick="() => ExecuteCommandWithPendingFormat(FormatCommand.Subscript)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Subscript (Ctrl+=)">
                    @((MarkupString)SvgIcons.Subscript)
                    <span class="sr-only">Subscript</span>
                </button>

                <button type="button"
                        id="rte-btn-superscript"
                        tabindex="@GetToolbarTabIndex("rte-btn-superscript")"
                        class="rte-btn @(IsFormatActiveOrPending("superscript") ? "active" : "")"
                        aria-pressed="@IsFormatActiveOrPending("superscript").ToString().ToLower()"
                        aria-label="Superscript"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-superscript"))"
                        @onclick="() => ExecuteCommandWithPendingFormat(FormatCommand.Superscript)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Superscript (Ctrl+Shift+=)">
                    @((MarkupString)SvgIcons.Superscript)
                    <span class="sr-only">Superscript</span>
                </button>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== COLOR GROUP ===== *@
            <div role="group" aria-label="Text colors">
                <div class="rte-color-dropdown">
                    <button type="button"
                            id="rte-btn-textcolor"
                            tabindex="@GetToolbarTabIndex("rte-btn-textcolor")"
                            @ref="_textColorButton"
                            class="rte-btn @(IsFormatActive("foreColor") ? "active" : "")"
                            aria-label="Text color"
                            aria-haspopup="true"
                            aria-expanded="@_showTextColorPicker.ToString().ToLower()"
                            @onfocus="@(() => OnToolbarButtonFocus("rte-btn-textcolor"))"
                            @onclick="ToggleTextColorPicker"
                            @onmousedown:preventDefault
                            @onclick:stopPropagation
                            data-tooltip="Text Color">
                        @* THIS SVG IS DYNAMIC AND MUST REMAIN INLINE *@
                        <svg class="rte-icon" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                            <path fill="currentColor" d="M7.01 16.4q-.287 0-.442-.228q-.154-.228-.05-.49l4.9-11.994q.048-.119.155-.204q.108-.084.246-.084h.362q.144 0 .249.084q.105.085.153.204l4.886 11.943q.104.28-.06.525q-.165.244-.451.244q-.177 0-.323-.094t-.214-.271l-1.302-3.273H8.816L7.502 16.06q-.067.157-.191.249q-.125.091-.302.091m2.16-4.6h5.585L12.05 5.0h-.138z" />
                            <rect x="3.8" y="19" width="16.4" height="2.5" rx="0.5" fill="@_currentTextColor" />
                        </svg>
                        <span class="sr-only">Text Color</span>
                    </button>

                    @if (_showTextColorPicker)
                    {
                        <div @ref="_textColorPalette"
                             id="textcolor-palette"
                             class="rte-color-palette"
                             role="listbox"
                             aria-label="Text colors"
                             @onkeydown="@(e => OnDropdownKeyDown(e, "textcolor-palette"))"
                             @onkeydown:stopPropagation
                             @onkeydown:preventDefault
                             @onclick:stopPropagation
                             @onmousedown:stopPropagation>
                            <div class="rte-color-palette-title" id="text-color-label">Text Color</div>
                            <div class="rte-color-grid" role="grid" aria-labelledby="text-color-label">
                                @foreach (var color in ColorPalette.TextColors)
                                {
                                    <button type="button"
                                            class="rte-color-swatch @(color.Key == "#FFFFFF" ? "rte-color-swatch-white" : "") @(_currentTextColor.Equals(color.Key, StringComparison.OrdinalIgnoreCase) ? "selected" : "")"
                                            role="option"
                                            aria-selected="@(_currentTextColor.Equals(color.Key, StringComparison.OrdinalIgnoreCase))"
                                            aria-label="@color.Value"
                                            style="background-color: @color.Key;"
                                            @onclick="@(() => SelectTextColor(color.Key))"
                                            title="@color.Value">
                                        <span class="visually-hidden">@color.Value</span>
                                    </button>
                                }
                            </div>
                            <div class="rte-color-custom">
                                <label for="custom-text-color">Custom:</label>
                                <input type="color" 
                                       id="custom-text-color" 
                                       class="rte-color-input"
                                       value="@_currentTextColor"
                                       @onchange="@(e => SelectTextColor(e.Value?.ToString() ?? "#000000"))" 
                                       aria-label="Choose custom text color" />
                            </div>
                        </div>
                    }
                </div>

                <div class="rte-color-dropdown">
                    <button type="button"
                            id="rte-btn-highlight"
                            tabindex="@GetToolbarTabIndex("rte-btn-highlight")"
                            @ref="_bgColorButton"
                            class="rte-btn @(IsFormatActive("backColor") ? "active" : "")"
                            aria-label="Highlight color"
                            aria-haspopup="true"
                            aria-expanded="@_showBackgroundColorPicker.ToString().ToLower()"
                            @onfocus="@(() => OnToolbarButtonFocus("rte-btn-highlight"))"
                            @onclick="ToggleBackgroundColorPicker"
                            @onmousedown:preventDefault
                            @onclick:stopPropagation
                            data-tooltip="Highlight Color">
                        <span class="rte-highlight-indicator" style="background-color: @_currentHighlightColor;">A</span>
                    </button>

                    @if (_showBackgroundColorPicker)
                    {
                        <div @ref="_bgColorPalette"
                             id="highlight-palette"
                             class="rte-color-palette"
                             role="listbox"
                             aria-label="Highlight colors"
                             @onkeydown="@(e => OnDropdownKeyDown(e, "highlight-palette"))"
                             @onkeydown:stopPropagation
                             @onkeydown:preventDefault
                             @onclick:stopPropagation
                             @onmousedown:stopPropagation>
                            <div class="rte-color-palette-title" id="bg-color-label">Highlight Color</div>
                            <div class="rte-color-grid" role="grid" aria-labelledby="bg-color-label">
                                @foreach (var color in ColorPalette.BackgroundColors)
                                {
                                    @if (color.Key == "transparent")
                                    {
                                        <button type="button"
                                                class="rte-color-swatch rte-color-swatch-none @(_currentHighlightColor == "transparent" ? "selected" : "")"
                                                role="option"
                                                aria-selected="@(_currentHighlightColor == "transparent")"
                                                aria-label="@color.Value"
                                                @onclick="@(() => SelectBackgroundColor(color.Key))"
                                                title="@color.Value">
                                            <span class="visually-hidden">@color.Value</span>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button"
                                                class="rte-color-swatch @(_currentHighlightColor.Equals(color.Key, StringComparison.OrdinalIgnoreCase) ? "selected" : "")"
                                                role="option"
                                                aria-selected="@(_currentHighlightColor.Equals(color.Key, StringComparison.OrdinalIgnoreCase))"
                                                aria-label="@color.Value"
                                                style="background-color: @color.Key;"
                                                @onclick="@(() => SelectBackgroundColor(color.Key))"
                                                title="@color.Value">
                                            <span class="visually-hidden">@color.Value</span>
                                        </button>
                                    }
                                }
                            </div>
                            <div class="rte-color-custom">
                                <label for="custom-highlight-color">Custom:</label>
                                <input type="color" 
                                       id="custom-highlight-color" 
                                       value="@(_currentHighlightColor == "transparent" ? "#FFFFFF" : _currentHighlightColor)"
                                       @onchange="@(e => SelectBackgroundColor(e.Value?.ToString() ?? "#FFFFFF"))" />
                            </div>
                        </div>
                    }
                    
                </div>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== PARAGRAPH GROUP ===== *@
            <div role="group" aria-label="Paragraph formatting">
                <button type="button"
                        id="rte-btn-bulletlist"
                        tabindex="@GetToolbarTabIndex("rte-btn-bulletlist")"
                        class="rte-btn @(IsFormatActive("insertUnorderedList") ? "active" : "")"
                        aria-pressed="@IsFormatActive("insertUnorderedList").ToString().ToLower()"
                        aria-label="Bulleted list"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-bulletlist"))"
                        @onclick="() => ExecuteCommand(FormatCommand.InsertUnorderedList)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Bullet List (Ctrl+Shift+8)">
                    @((MarkupString)SvgIcons.ListUl)
                    <span class="sr-only">Bulleted List</span>
                </button>

                <button type="button"
                        id="rte-btn-numberlist"
                        tabindex="@GetToolbarTabIndex("rte-btn-numberlist")"
                        class="rte-btn @(IsFormatActive("insertOrderedList") ? "active" : "")"
                        aria-pressed="@IsFormatActive("insertOrderedList").ToString().ToLower()"
                        aria-label="Numbered list"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-numberlist"))"
                        @onclick="() => ExecuteCommand(FormatCommand.InsertOrderedList)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Numbered List (Ctrl+Shift+7)">
                    @((MarkupString)SvgIcons.ListOl)
                    <span class="sr-only">Numbered List</span>
                </button>

                <button type="button"
                        id="rte-btn-outdent"
                        tabindex="@GetToolbarTabIndex("rte-btn-outdent")"
                        class="rte-btn"
                        aria-label="Decrease indent"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-outdent"))"
                        @onclick="() => ExecuteCommand(FormatCommand.Outdent)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Decrease Indent (Ctrl+[)">
                    @((MarkupString)SvgIcons.Outdent)
                    <span class="sr-only">Decrease Indent</span>
                </button>

                <button type="button"
                        id="rte-btn-indent"
                        tabindex="@GetToolbarTabIndex("rte-btn-indent")"
                        class="rte-btn"
                        aria-label="Increase indent"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-indent"))"
                        @onclick="() => ExecuteCommand(FormatCommand.Indent)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Increase Indent (Ctrl+])">
                    @((MarkupString)SvgIcons.Indent)
                    <span class="sr-only">Increase Indent</span>
                </button>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== ALIGNMENT GROUP ===== *@
            <div role="group" aria-label="Text alignment">
                <button type="button"
                        id="rte-btn-alignleft"
                        tabindex="@GetToolbarTabIndex("rte-btn-alignleft")"
                        class="rte-btn @(alignment == "left" ? "active" : "")"
                        aria-pressed="@(alignment == "left").ToString().ToLower()"
                        aria-label="Align left"
                          @onfocus="@(() => OnToolbarButtonFocus("rte-btn-alignleft"))"
                        @onclick="() => ExecuteCommand(FormatCommand.AlignLeft)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Align Left (Ctrl+L)">
                    @((MarkupString)SvgIcons.AlignLeft)
                    <span class="sr-only">Align Left</span>
                </button>

                <button type="button"
                        id="rte-btn-aligncenter"
                        tabindex="@GetToolbarTabIndex("rte-btn-aligncenter")"
                        class="rte-btn @(alignment == "center" ? "active" : "")"
                        aria-pressed="@(alignment == "center").ToString().ToLower()"
                        aria-label="Align center"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-aligncenter"))"
                        @onclick="() => ExecuteCommand(FormatCommand.AlignCenter)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Align Center (Ctrl+E)">
                    @((MarkupString)SvgIcons.AlignCenter)
                    <span class="sr-only">Align Center</span>
                </button>

                <button type="button"
                        id="rte-btn-alignright"
                        tabindex="@GetToolbarTabIndex("rte-btn-alignright")"
                        class="rte-btn @(alignment == "right" ? "active" : "")"
                        aria-pressed="@(alignment == "right").ToString().ToLower()"
                        aria-label="Align right"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-alignright"))"
                        @onclick="() => ExecuteCommand(FormatCommand.AlignRight)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Align Right (Ctrl+R)">
                    @((MarkupString)SvgIcons.AlignRight)
                    <span class="sr-only">Align Right</span>
                </button>

                <button type="button"
                        id="rte-btn-alignjustify"
                        tabindex="@GetToolbarTabIndex("rte-btn-alignjustify")"
                        class="rte-btn @(alignment == "justify" ? "active" : "")"
                        aria-pressed="@(alignment == "justify").ToString().ToLower()"
                        aria-label="Justify"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-alignjustify"))"
                        @onclick="() => ExecuteCommand(FormatCommand.AlignJustify)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Justify (Ctrl+J)">
                    @((MarkupString)SvgIcons.AlignJustify)
                    <span class="sr-only">Justify</span>
                </button>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== INSERT GROUP ===== *@
            <div role="group" aria-label="Insert">
                <button type="button"
                        id="rte-btn-link"
                        tabindex="@GetToolbarTabIndex("rte-btn-link")"
                        class="rte-btn @(IsFormatActive("link") ? "active" : "")"
                        aria-haspopup="dialog"
                        aria-label="@(IsFormatActive("link") ? "Edit link" : "Insert link")"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-link"))"
                        @onclick="CreateLink"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Insert Link (Ctrl+K)">
                    @((MarkupString)SvgIcons.Link)
                    <span class="sr-only">Insert Link</span>
                </button>

                <button type="button"
                        id="rte-btn-hr"
                        tabindex="@GetToolbarTabIndex("rte-btn-hr")"
                        class="rte-btn"
                        aria-label="Insert horizontal rule"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-hr"))"
                        @onclick="() => ExecuteCommand(FormatCommand.HorizontalRule)"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Horizontal Rule (Ctrl+Enter)">
                    @((MarkupString)SvgIcons.HorizontalRule)
                    <span class="sr-only">Horizontal Rule</span>
                </button>

                @* ===== EMOJI BUTTON (NO DROPDOWN WRAPPER) ===== *@
                <button type="button"
                        id="rte-btn-emoji"
                        tabindex="@GetToolbarTabIndex("rte-btn-emoji")"
                        @ref="_emojiButton"
                        class="rte-btn @(_isEmojiSelected ? "active" : "")"
                        aria-label="Insert emoji"
                        aria-haspopup="true"
                        aria-expanded="@_showEmojiPicker.ToString().ToLower()"
                        aria-pressed="@_isEmojiSelected.ToString().ToLower()"
                        @onfocus="@(() => OnToolbarButtonFocus("rte-btn-emoji"))"
                        @onclick="ToggleEmojiPicker"
                        @onmousedown:preventDefault
                        @onclick:stopPropagation
                        data-tooltip="Insert Emoji (Ctrl+Shift+E)">
                    <span aria-hidden="true" style="font-size: 16px; line-height: 1;">ðŸ˜€</span>
                    <span class="sr-only">Insert Emoji</span>
                </button>
            </div>

            <span class="rte-separator" role="separator" aria-orientation="vertical"></span>

            @* ===== CLEAR FORMATTING (always last) ===== *@
            <button type="button"
                    id="rte-btn-clearformat"
                    tabindex="@GetToolbarTabIndex("rte-btn-clearformat")"
                    class="rte-btn"
                    aria-label="Clear formatting"
                    @onfocus="@(() => OnToolbarButtonFocus("rte-btn-clearformat"))"
                    @onclick="() => ExecuteCommand(FormatCommand.RemoveFormat)"
                    @onmousedown:preventDefault
                    @onclick:stopPropagation
                    data-tooltip="Clear Formatting (Ctrl+\)">
                @((MarkupString)SvgIcons.ClearFormatting)
                <span class="sr-only">Clear Formatting</span>
            </button>
        </div>
    }

    <div class="rte-content-wrapper">
        <div class="rte-content"
             @ref="_editorRef"
             id="@_editorId"
             contenteditable="true"
             tabindex="0"
             @oninput="OnInput"
             @onkeydown="OnKeyDown"
             @onpaste="OnPaste"
             @onfocus="OnFocus"
             @onblur="OnBlur"
             @onclick="OnEditorClick"   
             @onmousedown="OnToolbarMouseDown"
             placeholder="@Placeholder"
             aria-label="@AriaLabel"
             aria-controls="@_editorId"
             aria-multiline="true"
             role="textbox">
        </div>
    </div>

    @if (ShowCharacterCount)
    {
        <div class="rte-footer">
            <span id="rte-char-count" class="rte-char-count" aria-live="polite" aria-atomic="true">
                @GetCharacterCount() / @MaxLength characters
                @if (GetWordCount() > 0)
                {
                    <span class="rte-word-count">(@GetWordCount() words)</span>
                }
            </span>
        </div>
    }
</div>

@* EMOJI PICKER - OUTSIDE EDITOR CONTAINER FOR PROPER POSITIONING *@
@if (_showEmojiPicker)
{
    <div class="emoji-picker-portal @(DarkMode ? "dark-mode" : "")" @onclick:stopPropagation>
        <EmoPicker IsOpen="@_showEmojiPicker"
                   OnEmojiSelected="InsertEmoji"
                   OnClose="CloseEmojiPicker"
                   UseVirtualization="true"
                   UseCompleteDataset="true"
                   DarkMode="@DarkMode" />
    </div>
}

<!-- Autocomplete OUTSIDE the editor container -->
<EmojiAutocomplete @ref="emojiAutocomplete"
                   OnEmojiSelected="OnEmojiSelected"
                   DarkMode="@DarkMode" />

@* ===== CLICK-OUTSIDE BACKDROP ===== *@
@if (_showTextColorPicker || _showBackgroundColorPicker || _showFontSizePicker || _showFontFamilyPicker || _showHeadingPicker)
{
    <div class="rte-backdrop" 
         @onclick="CloseAllDropdowns"
         @onclick:stopPropagation="false">
    </div>
}